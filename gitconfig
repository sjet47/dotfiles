[core]
	editor = vim
[pager]
	diff = delta
	difftool = true
[user]
	name = Sjet
	email = sjet@asjet.dev
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = true
	default = current
[init]
	defaultBranch = main
[alias]
	st = status
	ck = checkout
	pk = cherry-pick
	br = branch
	sw = switch
	pl = pull
	ps = push
	pf = push -f
	cm = commit -m
	cam = commit -a -m
	ma = commit --amend
	man = commit --amend --no-edit
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	mg = merge
	rb = rebase
	dft = difftool
	undo = reset --soft HEAD^
	drop = reset --hard HEAD^
[merge]
	ff = false
	commit = true
	conflictstyle = zdiff3
[interactive]
	diffFilter = delta --color-only
[diff]
	tool = difftastic
	colorMoved = default
	algorithm = histogram
	submodule = log
	colorMovedWS = allow-indentation-change
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[delta]
	navigate = true
	side-by-side = true
	line-numbers-left-format = "{nm:^4}|"
	line-numbers-right-format = "|{np:^4}|"
[push]
	default = current
	autoSetupRemote = true
[fetch]
	writeCommitGraph = true
[commit]
	gpgsign = true
[rebase]
	autostash = true
[rerere]
	enable = true
[help]
	autocorrect = prompt
[submodule]
	recurse = true
[status]
	submoduleSummary = true
[log]
	date = iso
[include]
	path = ~/.config/git/config
